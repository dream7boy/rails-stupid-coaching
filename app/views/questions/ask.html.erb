<h1>Questions#ask</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div id="question_box">
        <form id="your_form" action="/answer" method="get">
          <div class="form-group">
            <label for="question">Speak to your coach</label>
            <input class="form-control" type="text" id="question" name="query" placeholder="what time is it?">
          </div>
          <input type="submit" value="Go on!" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>
</div>



